<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.nadocars.messanger.ui.profile.ProfileActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar_main"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:id="@+id/car_info_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/money_layout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#000000"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/moneyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:text="Мой счет"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    tools:text="5948.64 р."/>

            </RelativeLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/user_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Пупкинидзенко Апологиус Разниколкостянтинович"/>

                <ImageView
                    android:id="@+id/profile_user_avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/default_avatar"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/user_name"
                    />

                <TextView
                    android:id="@+id/email_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:text="E-mail:"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/phone_number_title"
                    app:layout_constraintLeft_toRightOf="@+id/profile_user_avatar"
                    app:layout_constraintTop_toTopOf="@+id/profile_user_avatar"/>

                <EditText
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rounded_borders"
                    android:lines="1"
                    android:minWidth="190dp"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/email_title"
                    app:layout_constraintLeft_toLeftOf="@+id/phone_number"
                    app:layout_constraintTop_toTopOf="@+id/email_title"
                    tools:text="asdasdasdasd@gmail.com"/>

                <TextView
                    android:id="@+id/phone_number_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:text="Телефон:"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/profile_user_avatar"
                    app:layout_constraintLeft_toRightOf="@+id/profile_user_avatar"
                    app:layout_constraintTop_toBottomOf="@+id/email_title"/>

                <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/shape_rounded_borders"
                    android:lines="1"
                    android:minWidth="190dp"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/phone_number_title"
                    app:layout_constraintLeft_toRightOf="@+id/phone_number_title"
                    app:layout_constraintTop_toTopOf="@+id/phone_number_title"
                    tools:text="+380648754879"/>

                <TextView
                    android:id="@+id/code_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="code:"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/cancel_button"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/cancel_button"/>

                <EditText
                    android:id="@+id/code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:minWidth="50dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/code_title"
                    app:layout_constraintLeft_toRightOf="@+id/code_title"
                    app:layout_constraintTop_toTopOf="@+id/code_title"
                    tools:text="122321"/>

                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Отменить"
                    android:textAllCaps="false"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profile_user_avatar"/>

                <Button
                    android:id="@+id/save_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сохранить"
                    android:textAllCaps="false"
                    app:layout_constraintRight_toLeftOf="@+id/cancel_button"
                    app:layout_constraintTop_toBottomOf="@+id/profile_user_avatar"/>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/car_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:visibility="gone"
                tools:visibility="visible">

                <Button
                    android:id="@+id/prev_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Преидущая машина"
                    android:textAllCaps="false"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <Button
                    android:id="@+id/next_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Следующая машина"
                    android:textAllCaps="false"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <android.support.v4.view.ViewPager
                    android:id="@+id/car_photo_view_pager"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/next_car"/>

                <Button
                    android:id="@+id/add_car_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Добавить фото"
                    android:textAllCaps="false"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/car_photo_view_pager"/>

                <Button
                    android:id="@+id/delete_car_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Удалить фото"
                    android:textAllCaps="false"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/car_photo_view_pager"/>

                <TextView
                    android:id="@+id/day_price_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="Цена за сутки:"
                    android:textColor="@android:color/black"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/add_car_photo"
                    />

                <TextView
                    android:id="@+id/day_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1600 р."
                    android:textColor="@android:color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/day_price_title"
                    app:layout_constraintRight_toLeftOf="@+id/change_day_price"
                    app:layout_constraintTop_toTopOf="@+id/day_price_title"
                    />

                <ImageButton
                    android:id="@+id/change_day_price"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_mode_edit_black_24dp"
                    app:layout_constraintBottom_toBottomOf="@+id/day_price_title"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/day_price_title"
                    />

                <TextView
                    android:id="@+id/week_price_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="Цена за неделю:"
                    android:textColor="@android:color/black"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/day_price_title"
                    />

                <TextView
                    android:id="@+id/week_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4600 р."
                    android:textColor="@android:color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/week_price_title"
                    app:layout_constraintRight_toLeftOf="@+id/change_week_price"
                    app:layout_constraintTop_toTopOf="@+id/week_price_title"
                    />

                <ImageButton
                    android:id="@+id/change_week_price"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_mode_edit_black_24dp"
                    app:layout_constraintBottom_toBottomOf="@+id/week_price_title"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/week_price_title"
                    />

                <TextView
                    android:id="@+id/month_price_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="Цена за месяц:"
                    android:textColor="@android:color/black"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/week_price_title"
                    />

                <TextView
                    android:id="@+id/month_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="55000 р."
                    android:textColor="@android:color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/month_price_title"
                    app:layout_constraintRight_toLeftOf="@+id/change_month_price"
                    app:layout_constraintTop_toTopOf="@+id/month_price_title"
                    />

                <ImageButton
                    android:id="@+id/change_month_price"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_mode_edit_black_24dp"
                    app:layout_constraintBottom_toBottomOf="@+id/month_price_title"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/month_price_title"
                    />

                <Button
                    android:id="@+id/calendar_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Календарь доступности"
                    android:textAllCaps="false"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/month_price_title"/>

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
